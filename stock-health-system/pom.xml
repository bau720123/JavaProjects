<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>stock-health</artifactId>
    <version>1.0.0</version>

    <properties>
        <maven.compiler.source>25</maven.compiler.source>
        <maven.compiler.target>25</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jpackage.version>1.7.1</jpackage.version>
        <javafx.version>25</javafx.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-swing</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>okhttp</artifactId>
            <version>4.12.0</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.15.2</version>
        </dependency>
        <dependency>
            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>1.17.2</version>
        </dependency>
        <dependency>
            <groupId>org.jfree</groupId>
            <artifactId>jfreechart</artifactId>
            <version>1.5.4</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <!-- 在 Shade 之後複製 Fat JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>copy-fat-jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${project.build.directory}/jpackage-input"/>
                                <copy file="${project.build.directory}/stock-health-${project.version}-full.jar" 
                                      tofile="${project.build.directory}/jpackage-input/stock-health-${project.version}.jar"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <release>25</release>
                </configuration>
            </plugin>

            <!-- Shade Plugin: 建立包含所有依賴的 Fat JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <!-- 使用不同的檔名,避免被覆蓋 -->
                            <finalName>stock-health-${project.version}-full</finalName>
                            <shadedArtifactAttached>false</shadedArtifactAttached>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.example.Launcher</mainClass>
                                </transformer>
                                <!-- 合併 service 檔案 -->
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                        <exclude>META-INF/MANIFEST.MF</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>com.example.MainApp</mainClass>
                    <launcher>stockhealth</launcher>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.panteleyev</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>${jpackage.version}</version>
                <executions>
                    <execution>
                        <id>jpackage-bundle</id>
                        <phase>install</phase> 
                        <goals>
                            <goal>jpackage</goal>
                        </goals>
                        <configuration> 
                            <!-- 應用程式基本資訊 -->

                            <name>StockHealth</name>  <!-- 安裝後的程式名稱,也是 .exe 檔名的前綴 -->
                            <mainJar>stock-health-1.0.0.jar</mainJar>  <!-- 主要的 JAR 檔名(從 input 目錄讀取) -->
                            <mainClass>com.example.Launcher</mainClass>  <!-- 程式的主類別(入口點) -->
                            <type>EXE</type>  <!-- 打包類型: EXE=安裝檔, MSI=Windows 安裝程式, APP-IMAGE=免安裝版 -->
                            

                            <!-- Java 執行參數 -->
                            <javaOptions>
                                <option>-Dfile.encoding=UTF-8</option>  <!-- 設定檔案編碼為 UTF-8,避免中文亂碼 -->
                                <option>--enable-native-access=ALL-UNNAMED</option>  <!-- 允許存取原生函式庫,消除 JavaFX 的警告訊息 -->
                            </javaOptions>

                            <!-- Java 模組設定 -->
                            <addModules>
                                <addModule>java.desktop</addModule>  <!-- 桌面應用程式模組(GUI 相關) -->
                                <addModule>java.logging</addModule>  <!-- 日誌記錄模組 -->
                                <addModule>java.sql</addModule>  <!-- 資料庫連線模組(某些函式庫可能需要) -->
                                <addModule>java.xml</addModule>  <!-- XML 處理模組 -->
                                <addModule>jdk.unsupported</addModule>  <!-- 非公開 API 支援(某些函式庫需要) -->
                                <addModule>jdk.unsupported.desktop</addModule>  <!-- SwingNode 需要此模組(用於 JFreeChart) -->
                            </addModules>

                            <!-- 檔案路徑設定 -->

                            <input>${project.build.directory}/jpackage-input</input>
                            <!-- 輸入目錄: jpackage 從這裡讀取 JAR 檔 -->
                            <!-- 實際路徑: target/jpackage-input/ -->

                            <destination>${project.build.directory}/jpackage</destination>
                            <!-- 輸出目錄: 產生的 .exe 安裝檔會放在這裡 -->
                            <!-- 實際路徑: target/jpackage/ -->

                            <appVersion>${project.version}</appVersion>
                            <!-- 應用程式版本號,從 pom.xml 的 <version> 讀取 -->
                            <!-- 例如: 1.0.0 → StockHealth-1.0.0.exe -->

                            <icon>${project.basedir}/src/main/resources/icon.ico</icon>
                            <!-- 應用程式圖示檔案路徑 -->
                            <!-- Windows 必須是 .ico 格式 -->

                            <!-- Windows 專屬設定 -->
                            <winConsole>false</winConsole>
                            <!-- 是否顯示控制台視窗 -->
                            <!-- false: 純 GUI 應用,雙擊執行不會出現黑色視窗 -->
                            <!-- true: 會顯示控制台,可以看到 System.out.println 的輸出 -->

                            <winShortcut>true</winShortcut>
                            <!-- 是否建立桌面捷徑 -->
                            <!-- true: 安裝時會在桌面建立捷徑 -->
                            <!-- false: 不建立桌面捷徑 -->

                            <winMenu>true</winMenu>
                            <!-- 是否在開始選單建立捷徑 -->
                            <!-- true: 會在 Windows 開始選單建立程式捷徑 -->
                            <!-- false: 不出現在開始選單 -->

                            <winMenuGroup>StockHealth</winMenuGroup>
                            <!-- 開始選單的資料夾名稱 -->
                            <!-- 例如: 開始選單 > StockHealth > StockHealth.exe -->
                            <!-- 如果不設定,直接放在開始選單根目錄 -->

                            <winShortcutPrompt>true</winShortcutPrompt>
                            <!-- 安裝時是否詢問使用者是否建立捷徑 -->
                            <!-- true: 安裝程式會問 "是否建立桌面捷徑?" -->
                            <!-- false: 根據 winShortcut 設定直接建立或不建立 -->

                            <winDirChooser>true</winDirChooser>
                            <!-- 安裝時是否允許使用者選擇安裝目錄 -->
                            <!-- true: 顯示 "Destination Folder" 畫面,可以選擇路徑 -->
                            <!-- false: 直接安裝到預設路徑,不詢問 -->

                            <vendor>YourName</vendor>
                            <!-- 開發商/廠商名稱 -->
                            <!-- 會顯示在: -->
                            <!-- 1. 控制台 > 程式和功能 > 發行者 -->
                            <!-- 2. 檔案屬性 > 詳細資料 > 公司 -->
                            <!-- 建議改成你的名字或公司名 -->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>